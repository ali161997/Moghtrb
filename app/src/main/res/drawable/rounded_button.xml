<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/low_white">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="0dp" android:color="@color/Black" />

        </shape>
    </item>
    <item android:state_enabled="true" android:drawable="@color/white">
        <layer-list>
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="1dp" />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>