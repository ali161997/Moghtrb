<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anytime_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:elevation="@dimen/mainViewElevation"
    android:background="@drawable/rounded_sheet"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearTime"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CloseTimeSheet"
            style="@style/closeButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_anytime"
            android:layout_width="0dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            style="@style/blueButtonStyle"
            android:text="@string/save" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/linearTime"
        app:elevation="@dimen/mainViewElevation"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/cardSpin"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerAnyTime"
                    style="@style/mySpinner"
                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinner_choice_time"
                    android:padding="10dp"
                    android:textAlignment="textStart" />
            </com.google.android.material.card.MaterialCardView>


            <include
                android:id="@+id/foreigner_view"
                layout="@layout/view_foreigner"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_below="@id/cardSpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/student_view"
                layout="@layout/view_student"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardSpin" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>