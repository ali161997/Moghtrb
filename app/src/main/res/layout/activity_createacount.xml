<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.createacount">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_tv"
        android:fontFamily="@font/heebo_medium"
        android:text="@string/signup"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/arrowback_signup"
        android:textColor="@color/blue"
        android:gravity="center" />

    <ImageView
        android:id="@+id/arrowback_signup"
        android:layout_width="35dp"
        android:layout_alignParentStart="true"
        android:layout_height="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/arrowback_signup"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:cursorVisible="true"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:id="@+id/typename_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:inputType="textPersonName"
                android:padding="@dimen/paddingEditText"
                android:hint="Name"
                android:fontFamily="@font/heebo_medium"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:background="@drawable/edittext_border" />

            <EditText
                android:cursorVisible="true"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:id="@+id/typemail_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/typename_signup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_border"
                android:padding="@dimen/paddingEditText"
                android:textSize="20sp"
                android:hint="@string/email"
                android:fontFamily="@font/heebo_medium"
                android:textColor="@color/blue" />

            <EditText
                android:cursorVisible="true"
                android:background="@drawable/edittext_border"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:id="@+id/type_phone_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/typemail_signup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:inputType="phone"
                android:padding="@dimen/paddingEditText"
                android:textSize="20sp"
                android:hint="@string/telephone"
                android:fontFamily="@font/heebo_medium"
                android:textColor="@color/blue" />

            <EditText
                android:cursorVisible="true"
                android:background="@drawable/edittext_border"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:id="@+id/type_password_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_phone_signup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:inputType="textPassword"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:hint="@string/passWord"
                android:fontFamily="@font/heebo_medium" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:dropDownWidth="match_parent"
                android:layout_marginRight="30dp"
                android:id="@+id/college_Spinner_signup"
                android:spinnerMode="dropdown"
                android:prompt="@string/college"
                android:entries="@array/faculties"
                style="@style/Widget.AppCompat.Spinner"
                android:theme="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                android:background="#B38F8F"
                android:layout_below="@+id/type_password_signup" />

            <RadioGroup
                android:id="@+id/radio_gender_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/college_Spinner_signup"
                android:layout_margin="30dp"
                android:layoutDirection="ltr"
                android:dividerPadding="20dp"
                android:orientation="horizontal"
                android:splitMotionEvents="true">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginEnd="40dp"
                    android:id="@+id/Male_box"
                    android:tag="MaleBox"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/male"
                    app:buttonTint="@color/dark_blue"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Female_box"
                    android:tag="FemaleBox"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/heebo_medium"
                    app:buttonTint="@color/dark_blue"
                    android:text="@string/female"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/YearOfBirth"
                android:id="@+id/birh_tv_signup"
                android:layout_below="@id/radio_gender_signup"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/blue" />

            <DatePicker
                android:id="@+id/date_picker_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/birh_tv_signup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:spinnersShown="true"
                android:calendarViewShown="false"
                android:background="@color/blue"
                android:layout_marginRight="30dp"
                tools:visibility="visible">

            </DatePicker>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/createAccount_signup"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_picker_signup"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/Create_account"
                android:fontFamily="@font/heebo_medium"
                android:background="@drawable/rounded_button_log"
                android:layout_marginTop="40dp"
                android:padding="15dp"
                android:textAllCaps="false"
                android:layout_marginBottom="50dp" />

            <ProgressBar
                android:id="@+id/progressBar_signup"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>