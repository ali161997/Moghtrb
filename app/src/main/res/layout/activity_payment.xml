<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.alihashem.sokna.activities.Payment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLog"
        android:background="@color/low_white"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/barPay"
            app:navigationIcon="@drawable/arrow_back"
            android:layout_height="55dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"

                    android:layout_gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:gravity="start"
                    android:text="@string/payment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    app:actualImageResource="@drawable/soknalogo"
                    android:contentDescription="new post image"
                    android:visibility="visible" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:elevation="@dimen/mainViewElevation"
        android:layout_width="match_parent"
        android:layout_below="@id/appBarLog"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/tvDetails"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="@string/service_details"
                    android:textColor="@color/Black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Disabled"
                    android:padding="10dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:id="@+id/costMonth"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/gray"
                    android:text="@string/cost_per_month"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/valueMonth"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:text="@string/LE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:id="@+id/costInsurance"
                    android:padding="10dp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:text="@string/cost_of_a_month_in_advance"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/valuePreMonth"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:text="@string/LE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:id="@+id/cost"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/gray"
                    android:text="@string/services_water_gas"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/valueServices"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:gravity="end"
                    android:text="@string/LE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:id="@+id/netText"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/gray"
                    android:text="@string/total"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/valueNet"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:gravity="end"
                    android:text="@string/LE" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Send"
                android:id="@+id/tvSend"
                android:textSize="20sp"
                android:padding="5dp"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/Black"
                android:layout_margin="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linear6"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/Black"
                    android:id="@+id/From"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="@string/from" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fieldPhone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/heebo_medium"
                    android:hint="@string/hint_phone_number"
                    android:padding="5dp"
                    android:inputType="phone"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="@color/Black"
                    app:boxStrokeWidthFocused=".5dp"
                    app:boxStrokeColor="@color/Black"
                    app:hintAnimationEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/typPhonePayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/Black" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear4"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/Black"
                    android:id="@+id/To"
                    android:padding="10dp"
                    android:text="@string/to" />

                <CheckedTextView
                    android:id="@+id/vodafoneCheck"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/vodafone"
                    android:textColor="@color/quantum_googredA700"
                    android:textSize="15sp" />

                <CheckedTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="@string/etisalat"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/etisalatCheck"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textColor="@color/green" />

                <CheckedTextView
                    android:layout_width="0dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/orange"
                    android:id="@+id/orangeCheck"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textColor="@color/quantum_orangeA700" />

                <CheckedTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/we"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:id="@+id/weCheck"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:textColor="@color/move" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layoutDirection="ltr"
                android:text="+20 1068278067"
                android:gravity="center"
                android:id="@+id/tvPhone"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/quantum_googredA700" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyButtonStyle"
                android:text="@string/confirm"
                android:id="@+id/btnConfirm"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textSize="15sp" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>