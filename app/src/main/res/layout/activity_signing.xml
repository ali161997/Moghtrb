<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.signing">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonFacebookLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="@string/Create_account"
            tools:includeFontPadding="false"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/heebo_medium"
            android:padding="20dp"

            android:textAllCaps="false"
            android:textSize="20sp" />


        <Button
            android:id="@+id/createAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonFacebookLogin"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/Create_account"
            tools:includeFontPadding="false"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/heebo_medium"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:textAllCaps="false"
            android:id="@+id/more_options"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createAccount"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/more_options"
            android:textColor="@color/blue"
            android:textSize="20sp"
            tools:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:id="@+id/or"
            android:layout_below="@id/more_options"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            tools:textAllCaps="false"
            android:fontFamily="@font/heebo_medium"
            android:textColor="@color/blue"
            android:gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/or"
            android:id="@+id/login"
            android:fontFamily="@font/heebo_medium"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:background="@drawable/rounded_button_log"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/login"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:text="@string/terms"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:fontFamily="@font/heebo_medium"
            android:textColor="@color/gray"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <ProgressBar
            android:id="@+id/progressBar_facebook"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</ScrollView>



