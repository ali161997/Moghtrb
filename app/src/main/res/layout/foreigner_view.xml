<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="CheckIn"
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/end_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_checkin"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="CheckOut"
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_date_tv"
        android:layout_marginStart="20dp"
        android:theme="@style/MyApp_datepickerTheme"
        android:layout_marginEnd="20dp"
        android:background="@color/gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <DatePicker
            android:id="@+id/checkin_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:startYear="2019"
            android:minDate="01/01/2019"
            android:layout_below="@id/start_date_tv"
            android:calendarViewShown="true" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_date_tv"
        android:theme="@style/MyApp_datepickerTheme"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:background="@color/gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <DatePicker
            android:id="@+id/checkout_picker"
            android:startYear="2019"
            android:minDate="02/01/2019"
            android:maxDate="02/01/2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="true">

        </DatePicker>
    </androidx.cardview.widget.CardView>
</RelativeLayout>