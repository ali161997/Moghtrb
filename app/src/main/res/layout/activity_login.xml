<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.login">

    <ImageView
        android:id="@+id/arrowback_login"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/arrowback_login"
        android:text="@string/login"
        android:fontFamily="@font/heebo_medium"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/blue"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/arrowback_login"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative_log"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/mstatus"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent" />


            <EditText
                android:fontFamily="@font/heebo_medium"
                android:id="@+id/type_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mstatus"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_marginRight="30dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/blue"
                android:hint="@string/email"
                android:cursorVisible="true"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:shadowColor="#000"
                android:textSize="25sp" />

            <EditText
                android:padding="5dp"
                android:id="@+id/type_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_email_login"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:inputType="textPassword"
                android:textColor="@color/blue"
                android:hint="@string/passWord"
                android:fontFamily="@font/heebo_medium"
                android:cursorVisible="true"
                android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_email_login"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="26dp"
                android:text="Show"
                android:fontFamily="@font/heebo_medium"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forget"
                android:layout_below="@id/type_password_login"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/heebo_medium"
                android:text="Forget Password click Here"
                android:textColor="@color/gray"
                android:textSize="15sp"


                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_log"
                android:layout_below="@id/forget"
                android:fontFamily="@font/heebo_medium"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/btn_go"
                android:textSize="25sp"
                android:text="GO" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>