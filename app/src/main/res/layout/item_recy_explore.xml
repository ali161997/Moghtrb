<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                app:cardBackgroundColor="@color/white"

                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_item"
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    fresco:roundedCornerRadius="2dp"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:roundingBorderWidth="2dp"
                    fresco:fadeDuration="300"
                    fresco:roundingBorderColor="@color/gray"
                    fresco:placeholderImage="@drawable/place_holder"
                    android:layout_gravity="center_horizontal"
                    fresco:retryImage="@drawable/ic_refresh_black_24dp" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_image_rec"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:progress="5" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/heebo_medium"
                android:text="2500 L.E"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/heebo_medium"
                android:text="Asyut.seed street"
                android:textColor="@color/gray"
                android:textSize="15sp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:textColor="@color/gray">


                <RatingBar
                    android:id="@+id/rating_item"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.0"
                    android:theme="@style/RatingBar"

                    />

                <TextView
                    android:id="@+id/review_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="52 Reviews"
                    android:textColor="@color/dark_blue"
                    android:textSize="8sp" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>